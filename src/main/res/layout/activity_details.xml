<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cardDetail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    card_vew:cardCornerRadius="5dp"
    card_vew:cardBackgroundColor="@color/branco"
    android:layout_margin="7dp"
    android:elevation="10dp"
    android:foreground="?attr/selectableItemBackground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_vew="http://schemas.android.com/apk/res-auto"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp">

            <ProgressBar
                android:id="@+id/progressDetail"
                style="@android:style/Widget.Holo.ProgressBar.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_vertical"
                android:layout_marginRight="4dp"
                android:visibility="visible"
                />

            <ImageView
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:id="@+id/imgShotDetail"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/shot" />


        </FrameLayout>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:elevation="10dp"
            android:background="@color/primary"
            android:layout_weight="1">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/branco"
                    android:textSize="20sp"
                    android:layout_alignParentLeft="true"
                    android:paddingLeft="10dp"
                    android:id="@+id/txtNomeDetail" />

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_visibility_white_48dp"
                    android:layout_toLeftOf="@+id/txtDetailLikes"
                    android:paddingRight="5dp"
                    android:id="@+id/imgIconShotDetail"
                    android:contentDescription="@string/shot_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="gravity"
                    android:textColor="@color/branco"
                    android:layout_alignParentRight="true"
                    android:textSize="20sp"
                    android:paddingRight="10dp"
                    android:id="@+id/txtDetailLikes"
                    />

        </RelativeLayout>

       </LinearLayout>
</android.support.v7.widget.CardView>



